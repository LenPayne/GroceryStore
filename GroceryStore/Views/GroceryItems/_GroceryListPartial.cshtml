    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isAlochol)
        </td>
        <td>
            @Html.ActionLink(item.Department, "ByDepartment", new { department = item.Department })            
